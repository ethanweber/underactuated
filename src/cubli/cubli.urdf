<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 name="CartPole">

  <link name="ground">
    <visual>
      <origin xyz="0 0 -5" rpy="0 0 0" />
      <geometry>
        <box size="1000 1000 10" />
      </geometry>
      <material>
        <color rgba="0.93 .74 .4 1" />
      </material>
    </visual>
    <inertia ixx="0.0" iyy="0.0" izz="0.0" ixy="0.0" ixz="0.0" iyz="0.0"/>
    <collision name='ground_collision'>
      <origin xyz="0 0 -5" rpy="0 0 0"/>
      <geometry>
        <box size="1000 1000 10" />
      </geometry>
    </collision>
  </link>

  <link name="cube">
    <inertial>
      <origin rpy="0 0 0"/>
  		<mass value="1.0"/>
  		<inertia ixx="1" iyy="1" izz="1" ixy="0.0" ixz="0.0" iyz="0.0"/>
  	</inertial>
    <collision name='cube_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size=".5 .5 .5" />
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size=".5 .5 .5" />
      </geometry>
      <material>
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="wheel">
  	<inertial>
      <origin rpy="1.5707963267948966 0 0"/>
  		<mass value="1.0"/>
  		<inertia ixx="1" iyy="1" izz="1" ixy="0.0" ixz="0.0" iyz="0.0"/>
  	</inertial>
  	<visual>
      <origin rpy="1.5707963267948966 0 0"/>
      <geometry>
        <box size="0.25 0.25 .6" />
      </geometry>
    </visual>
  </link>

  <joint name="cube_position" type="floating">
    <parent link="ground" />
    <child link="cube" />
    <origin xyz="0 0 .25"/>
    <axis xyz="1 0 0" />
    <dynamics damping="0.1" />
  </joint>

  <joint name="theta" type="continuous">
    <parent link="cube" />
    <child link="wheel" />
    <origin xyz="0 0 0" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <transmission type="SimpleTransmission" name="cube_force">
    <actuator name="force" />
    <joint name="theta" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
</robot>

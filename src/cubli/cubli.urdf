<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 name="CartPole">

  <link name="ground">
    <visual>
      <origin xyz="0 0 -5" rpy="0 0 0" />
      <geometry>
        <box size="1000 1000 10" />
      </geometry>
      <material>
        <color rgba="0.93 .74 .4 1" />
      </material>
    </visual>
  </link>

  <link name="cube">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="10" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size=".5 .5 .5" />
      </geometry>
      <material>
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="wheel">
  	<inertial>
      <origin rpy="1.5707963267948966 0 0"/>
  		<mass value="1.0"/>
  		<inertia ixx="1" iyy="1" izz="1" ixy="0.0" ixz="0.0" iyz="0.0"/>
  	</inertial>
  	<visual>
      <origin rpy="1.5707963267948966 0 0"/>
      <geometry>
        <cylinder radius="0.15" length=".25"/>
      </geometry>
    </visual>
  </link>

  <joint name="x" type="prismatic">
    <parent link="ground" />
    <child link="cube" />
    <origin xyz="0 0 .25" />
    <axis xyz="1 0 0" />
    <dynamics damping="0.1" />
  </joint>

  <joint name="theta" type="continuous">
    <parent link="cube" />
    <child link="wheel" />
    <origin xyz="0 0 0" />
    <axis xyz="1 0 0" />
    <dynamics damping="0.1" />
  </joint>

  <transmission type="SimpleTransmission" name="cube_force">
    <actuator name="force" />
    <joint name="x" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
</robot>
